<div class="contents row" >
  <div class="content_post" style="background-image: url(<%= @tweet.image %>);">
    
  </div>
  <div class="maintext">
    <p>
      <h2><%= br(@tweet.text) %></h2>
      <hr>
      <%= simple_format(@tweet.maintext) %>
      <hr>
      <span class="name"><%= @tweet.name %></span>
      <span class="place"><%= @tweet.place %></span>

      <div class="sns_buttons">
        <a href="https://twitter.com/share" class="twitter-share-button" data-lang="ja" data-text="あなたはどうおもいますか？">ツイート</a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

        <!--<a name="fb_share" type="button_count">シェア</a>
          <script src="http://static.ak.fbcdn.net/connect.php/js/FB.Share" type="text/javascript"></script>-->
      </div>
      
    </p>
  </div>
</div>

<% @tweet.comments.each do |comment| %>
  <div class="contents row" >
    <div class="comment">
      <p>
        <%= br(comment.text) %><hr>
      </p>
      <span class="name"><%= comment.place %></span>
      <span class="username"><%= comment.username %></span>
    </div>
   </div>
<% end %>

<div class="contents row">
  <%= form_tag(tweet_comments_path, method: :post) do %>
    <h3>
      投稿する
    </h3>
    <input placeholder="Nickname" type="text" name="username">
    <input placeholder="Place" type="text" name="place">
    <textarea cols="30" name="text" placeholder="あなたの考えを教えて" rows="10"></textarea>
    <input type="submit" value="SENT">
  <% end %>
</div>
